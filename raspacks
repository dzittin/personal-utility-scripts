#! /bin/bash

USAGE='-u : update (update and upgrade)
-autorm : autoremove (unneeded packages)
-i package : install package
-reinstall : force a reinstall of package with latest rev'


case "$1" in
        -i | install)
                shift
                sudo apt install $1
                ;;

        -u | -update)
                sudo apt-get update
                sudo apt-get upgrade
                ;;

        -autorm | autoremove)
                sudo apt autoremove
                ;;

        -reinstall)
                sudo reinstall
                ;;

        *)
                echo "$USAGE"
                ;;
esac
